<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#1b8802</item> <!-- green//oncolor-->
        <!--&lt;!&ndash; inactive thumb color &ndash;&gt;-->
        <item name="colorSwitchThumbNormal"> @color/enable_thumb_green</item><!--//#b2101a-->
        <!--<item name="android:colorBackground" >#b2101a</item>-->
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#b2101a </item>   <!-- red color//backgrndcol-->


    </style>
    <!--46bdbf,,,f1f1f1,,, 42221f1f-->


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>

    </style>
    <!--<item name="colorAccent">@color/colorRed</item>
    <item name="android:windowTitleBackgroundStyle">@color/pinkyRed</item>>-->
</resources>
