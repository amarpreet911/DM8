                android:text="Driver"
                android:textColor="#dc0606"
                android:textSize="20sp"
                >
            </TextView>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_gravity="center"
