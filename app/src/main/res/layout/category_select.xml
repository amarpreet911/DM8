        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/uber_logo"
            android:id="@+id/imageView2"
            android:layout_weight="2" />
    </LinearLayout>


    <LinearLayout
